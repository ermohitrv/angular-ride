<% layout('layoutAdmin') -%>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <section class="content-header">
      <h1>
        Update Brand
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Update Brand</li>
      </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">
                        <form method="post" class="form-horizontal" id="insert_form" action="/admin/brand/update" data-toggle="validator" enctype="multipart/form-data">
                            <div class="col-lg-12">
                                <div class="page-header">
                                    <div class="pull-right">
                                        <button id="frm_edit_product_save" class="btn btn-success" type="submit">Submit <i class="fa fa-plus"></i></button>
                                    </div>
                                    <h2>Update Brand</h2>
                                </div>
                                <input type="hidden" name="frm_brand_id" id="category_title" class="form-control" minlength="5" maxlength="200" value="<%= branddata._id %>" required />

                                <div class="form-group">
                                    <label for="frm_brand_title" class="col-sm-2 control-label">Brand title *</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="frm_brand_title" class="form-control" minlength="3" maxlength="200" value="<%= branddata.brand_title %>" required readonly/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="frm_brand_featured" class="col-sm-2 control-label">Featured</label>
                                    
                                    <div class="col-sm-10">
                                       
                                        <input type="checkbox" id="frm_brand_featured" name="frm_brand_featured">
                                        
                                       
                                    </div>
                                </div>
                                <div class="form-group" id="editor-wrapper">
                                    <label for="editor" class="col-sm-2 control-label">Brand description (Markdown) *</label>
                                    <div class="col-sm-10">
                                        <textarea id="editor" minlength="5" rows="5" name="frm_brand_description" class="form-control" required><%= branddata.brand_description %></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="frm_brand_image" class="col-sm-2 control-label">Image</label>
                                    <div class="col-sm-10">
                                        <input type="file" id="frm_brand_image" name="frm_brand_image">
                                    </div>
                                </div> 
                                <div class="form-group">
                                      <label for="frm_brand_image" class="col-sm-2 control-label"></label>
                                     <% if(branddata.brand_image != '') {%>
                                     <div class="col-sm-10">
                                     <img src="/public/uploads/<%= branddata.brand_image %>"/>
                                     </div>
                                     <% } %> 
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Permalink</label>
                                    <div class="col-sm-10">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name="frm_brand_permalink" id="frm_brand_permalink" placeholder="Permalink for the brand" value="<%= branddata.brand_permalink %>">
                                            <span class="input-group-btn">
                                                <button class="btn btn-success" id="validate_permalink" type="button">Validate</button>
                                                <button class="btn btn-warning" id="generate_permalink" type="button">Generate</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
$(function() {
    $('#magicsuggest-category').magicSuggest({
        placeholder: 'Type category name...',
        data: ['SuperSport', 'Cruiser', 'Dual', 'Sport', 'Touring', 'Scooter']
    });
    $('#magicsuggest-brand').magicSuggest({
        placeholder: 'Type brand name...',
        data: ['Banana', 'Apple', 'Orange', 'Lemon']
    });
});
</script>
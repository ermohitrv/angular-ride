<% layout('layoutAdmin') -%>
<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper" data-ng-controller="adminController">
    <section class="content-header">
      <h1>
        Update Category
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Update Category</li>
      </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">
                        <form method="post" class="form-horizontal" id="insert_form" action="/admin/category/update" data-toggle="validator" >
                            <div class="col-lg-12">
                                <div class="page-header">
                                    <div class="pull-right">
                                        <button id="frm_edit_category_save" class="btn btn-success" type="submit">Submit <i class="fa fa-plus"></i></button>
                                    </div>
                                    <h2>Update Category</h2>
                                </div>
                              
                                <input type="hidden" name="frm_category_id" id="category_id" class="form-control" minlength="5" maxlength="200" value="<%= categorydata._id %>" required />
                                <input type="hidden" name="frm_hidden_category_title" id="category_title" class="form-control" minlength="5" maxlength="200" value="<%= categorydata.category_title %>" required />

                                
                                <div class="form-group">
                                    <label for="frm_category_title" class="col-sm-2 control-label">Category title *</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="frm_category_title" id="category_title" class="form-control" minlength="5" maxlength="200" value="<%= categorydata.category_title %>" required />
                                    </div>
                                </div>
                               
                                
                               
                                <div class="form-group" id="editor-wrapper">
                                    <label for="editor" class="col-sm-2 control-label">Category short description (Markdown) *</label>
                                    <div class="col-sm-10">
                                        <textarea id="editor" minlength="2" rows="5" name="frm_category_short_description" class="form-control"  required><%= categorydata.category_short_description %></textarea>
                                    </div>
                                </div>
                                <div class="form-group" id="editor-wrapper">
                                    <label for="editor" class="col-sm-2 control-label">Category description (Markdown) *</label>
                                    <div class="col-sm-10">
                                        <textarea id="editor" minlength="5" rows="10" name="frm_category_description" class="form-control"  required><%= categorydata.category_description %></textarea>
                                    </div>
                                </div>
                                
                                
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

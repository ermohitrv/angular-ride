<% layout('layoutAdmin') -%>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <section class="content-header">
      <h1>
        Update User
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Update User</li>
      </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">
                        <form method="post" class="form-horizontal" id="insert_form" action="/admin/userupdate" data-toggle="validator" >
                            
                            <input type="hidden" name="frm_user_id" class="form-control" minlength="3" maxlength="200" value="<%= userdata._id %>" />

                            <div class="col-lg-12">
                                <div class="page-header">
                                    <div class="pull-right">
                                        <button id="frm_edit_product_save" class="btn btn-success" type="submit">Submit <i class="fa fa-plus"></i></button>
                                    </div>
                                    <h2>Update User</h2>
                                </div>
                                <div class="form-group">
                                    <label for="frm_user_firstname" class="col-sm-2 control-label">First Name*</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="frm_user_firstname" class="form-control" minlength="3" maxlength="200" value="<%= userdata.local.firstName %>" required/>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="frm_user_lastname" class="col-sm-2 control-label">Last Name*</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="frm_user_lastname" class="form-control" minlength="3" maxlength="200" value="<%= userdata.local.lastName %>" required/>
                                    </div>
                                </div>
                               
                                <div class="form-group">
                                    <label for="frm_user_email" class="col-sm-2 control-label">Email*</label>
                                    <div class="col-sm-10">
                                        <input readonly type="text" name="frm_user_email" class="form-control" minlength="3" maxlength="200" value="<%= userdata.local.email %>" required/>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="frm_user_username" class="col-sm-2 control-label">Username*</label>
                                    <div class="col-sm-10">
                                        <input readonly type="text" name="frm_user_username" class="form-control" minlength="3" maxlength="200" value="<%= userdata.local.username %>" required/>
                                    </div>
                                </div>
                                
                                
                                
                                <div class="form-group">
                                    <label for="frm_user_gender" class="col-sm-2 control-label">Gender*</label>
                                    <div class="col-sm-10">
                                    <select class="form-control" name="frm_user_gender">
                                        <option name="" value="">SELECT</option>
                                        <option name="MALE" <% if(userdata.local.gender == 'MALE'){ %> selected='selected' <% } %> value="MALE">MALE</option>
                                        <option name="FEMALE" <% if(userdata.local.gender == 'FEMALE'){ %> selected='selected' <% } %>  value="FEMALE">FEMALE</option>
                                        <option name="OTHER" <% if(userdata.local.gender == 'OTHER'){ %> selected='selected' <% } %>  value="OTHER">OTHER</option>
                                    </select>                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="frm_user_userlevel" class="col-sm-2 control-label">User Level*</label>
                                    <div class="col-sm-10">
                                    <select class="form-control" name="frm_user_userlevel">
                                        <option name="NORMAL" <% if(userdata.local.userLevel == 'NORMAL'){ %> selected='selected' <% } %> value="NORMAL">NORMAL</option>
                                         <option name="MODERATOR" <% if(userdata.local.userLevel == 'MODERATOR'){ %> selected='selected' <% } %> value="MODERATOR">MODERATOR</option> 
                                        <option name="ADMIN" <% if(userdata.local.userLevel == 'ADMIN'){ %> selected='selected' <% } %>  value="ADMIN">ADMIN</option>
                                    </select>                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="frm_user_useractive" class="col-sm-2 control-label">User Active*</label>
                                    <div class="col-sm-10">
                                    <select class="form-control" name="frm_user_useractive">
                                        <option name="ACTIVE" <% if(userdata.local.userActive == 'ACTIVE'){ %> selected='selected' <% } %> value="ACTIVE">ACTIVE</option>
                                        <option name="INACTIVE" <% if(userdata.local.userActive == 'INACTIVE'){ %> selected='selected' <% } %>  value="INACTIVE">INACTIVE</option>
                                    </select>                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="frm_user_accountenable" class="col-sm-2 control-label">Account Enable*</label>
                                    <div class="col-sm-10">
                                    <select class="form-control" name="frm_user_accountenable">
                                        <option name="ACTIVATE" <% if(userdata.enableAccount === false){ %> selected='selected' <% } %> value="false">DEACTIVATE</option>
                                        <option name="DEACTIVATE" <% if(userdata.enableAccount === true){ %> selected='selected' <% } %>  value="true">ACTIVATE</option>
                                    </select>                                    </div>
                                </div>
                               
                               
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


<% layout('layoutAdmin') -%>
<div class="content-wrapper" >
    <section class="content-header">
      <h1>
        Add Rider Category
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Add Rider Category</li>
      </ol>
    </section>
    <section class="content" data-ng-controller="adminController">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">
                        <form method="post" class="form-horizontal" id="insert_form" action="/admin/ridercategory/insert" data-toggle="validator" >
                            <div class="col-lg-12">
                                <div class="page-header">
                                    <div class="pull-right">
                                        <button id="frm_edit_product_save" class="btn btn-success" type="submit">Submit <i class="fa fa-plus"></i></button>
                                    </div>
                                    <h2>New Rider Category</h2>
                                </div>
                                <div class="result_del"></div>
                                <% if (message.length > 0) { %>
                                    <% if (message_type == "success" || message_type == "danger"){ %>
                                        <div class="alert alert-success"><%= message %></div>
                                    <% }else{ %>
                                        <div class="alert alert-danger"><%= message %></div>
                                    <% } %>
                                <% } %>
                                <div class="form-group">
                                    <label for="frm_tax" class="col-sm-2 control-label">Category Name *</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="rider_category_name" placeholder="Enter Category Name" class="form-control" minlength="1" maxlength="20" required/>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<% layout('layoutAdmin') -%>
<style>
.formtextarea{
        width:100%;
        padding: 5px 0px 5px 5px;
        height:100px;
}
.modal-open {
    overflow: auto !important;
}
.modal-backdrop {
    position: relative !important;
}
</style>
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Suggestions
        
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
      </ol>
    </section>
    <section class="content" data-ng-controller="adminController">
        <div class="row" data-ng-init="getsuggestionList()"> 
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            <div class="row">
                                <div class="col-sm-6"></div>
                                <div class="col-sm-6"></div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <h3>
<!--                                        <div class="pull-left">Reviews</div>
                                        <div class="pull-right"><input data-ng-model="search_user.event_type" type="text" class="form-control" placeholder="Search review"></div>
                                        <div class="clearfix"></div>-->
                                    </h3>
                                <div class="result_del"></div>
                                <% if (message.length > 0) { %>
                                    <% if (message_type == "success"){ %>
                                        <div class="alert alert-success"><%= message %></div>
                                    <% }else{ %>
                                        <div class="alert alert-danger"><%= message %></div>
                                    <% } %>
                                <% } %>
                                    <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Name</th>
                                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Email</th>
                                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Phone</th>
                                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Suggestion</th>
                                                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr data-ng-if="suggestionList.length > 0" data-ng-repeat="suggestions in suggestionList | orderBy:'addedOn'" id="{{ suggestions._id }}" role="row" class="odd">
                                                
                                                <td><span data-ng-bind="suggestions.suggestionName"></span></td>
                                                <td>
                                                    <span data-ng-bind="suggestions.suggestionEmail"></span>
                                                </td>
                                                
                                                <td>
                                                    <span data-ng-bind="suggestions.suggestionPhone"></span>
                                                </td>
                                                
                                                <td>
                                                    <span data-ng-bind="suggestions.suggestionDescription"></span>
                                                </td>
                                                <td>
                                                    
                                                    <a  data-toggle="modal" data-target="#respond_{{ suggestions._id }}" title="Respond"  class="" href="javascript:;">Respond</a>
                                                    <div class="modal fade" id="respond_{{  suggestions._id }}" role="dialog" aria-labelledby="respondBox" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                              <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                                <h4 class="modal-title">{{ suggestions.suggestionName }}:</h4>
                                                              </div>
                                                              <div class="modal-body">
                                                                  <h4>Write a comment</h4>
                                                                  <textarea class="formtextarea" id="suggestionRespondMessage" name="suggestionRespondMessage" ></textarea>
                                                                   <label id="errormessage" class="error" style="display:none">This field is mandatory.</label>
                                                              </div>
                                                              <div class="modal-footer">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                                <a uid="{{ suggestions._id }}" href="javascript:;" class="btn btn-danger respond_this_suggestion btn" id="respond">Send</a>
                                                              </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr  data-ng-if="suggestionList.length <= 0">
                                                <td colspan="5" style="text-align: center">No results found</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-5">
                                </div>
                                <div class="col-sm-7">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
  </div>
  <!-- /.content-wrapper -->
   <script data-cfasync="false"  >
$(function(){
    $(document).on('click', 'a.respond_this_suggestion' ,function(){
        var uid = $(this).attr('uid');
        var suggestionRespondMessage = $('#suggestionRespondMessage').val();
        if(suggestionRespondMessage != "" && uid != undefined && uid != null){

            respond_contact(uid,suggestionRespondMessage);
        }else{
            $('#errormessage').css('display','block');
        }
        
    });
});

function respond_contact(uid,suggestionRespondMessage){
    
    
    jQuery.ajax({
        type  : "POST",
        url   : "/admin/respond-suggestion",
        data  : {'uid' : uid,'suggestionRespondMessage':suggestionRespondMessage},
        timeout: 3000,
        success: function(data){
             if(data === 'error'){
                $(".result_del").html('<div class="alert alert-danger">Error Occured!</div>');
            }else{
                $('#respond_'+uid).hide();              
                $('.modal-backdrop.in').css('opacity','0');
                $(".result_del").html('<div class="alert alert-success">Your message has been sent successfully!</div>');
            }
        },
        error : function(err){
        }
    });
}
</script>
  
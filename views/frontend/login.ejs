<% layout('layout') -%>
<script data-cfasync="false"  src='https://www.google.com/recaptcha/api.js'></script>
<div class="login_layout">
    <div class="overlay_bg"></div>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <% if (message.length > 0) { %>
                <div class="alert alert-danger text-center"><%= message %></div>
            <% }
             else if (success_loginMessage.length > 0) { %>
                <div class="alert alert-success text-center"><%= success_loginMessage %></div>
            <% } %>
            <div class="title"><h1><span class="fa fa-sign-in"></span> <%= title %></h1></div>

            <form action="/login" method="post" id="login_form">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" placeholder="Please enter your email" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" placeholder="Please enter your password" class="form-control" name="password">
                </div>
<!--                <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <input type="text" style="visibility: hidden;float: right;" class="hiddenRecaptcha required" name="hiddenRecaptcha" id="hiddenRecaptcha">
                            <div class="g-recaptcha" data-sitekey="6LebSxoUAAAAAFLeDEkNXMTSD-p39ELWFtj3gJjQ"></div>
                        </div>
                        <div class="col-md-3"></div>
                </div>
                <div class="form-group" style="margin-top: 61px;margin-left: 37%;">-->
                <div class="form-group text-center">
                <button type="submit" class="btn btn-warning btn-lg">Login</button>
                </div>
            </form>
            <hr>
            <p class="text-center">Need an account? <a href="/signup">Signup</a> Or go <a href="/">home</a></p><br>
            <div class="text-center">
                <a href="/auth/facebook" class="btn btn-facebook btn-lg"><span class="fa fa-facebook"></span> Login with Facebook</a>
            </div>
            <!--<a href="/auth/google" class="btn btn-google pull-right btn-lg"><span class="fa fa-google-plus"></span> Login with Google+</a>-->
        </div>
    </div>
</div>

                           <td>
                              <i class=" fa fa-bell-o" data-original-title="" title=""></i>
                           </td>
                           <td>New Notification</td>
                           <td> 09</td>
                        </tr>
                     </tbody>
                  </table>
               </section>
               <!-- end:user info table -->
            </div>
         </div>
      </div>
   </div>
</section>
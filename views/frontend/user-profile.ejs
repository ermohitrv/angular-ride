                        <button class="btn btn-sm data-btn btn-like-default likeVideo" data-liked="0" data-trickid="49" data-videoid="22806" data-count="0">
                        <span class="likeBadge22806">0</span>
                        </button>
                        <button class="btn btn-sm data-btn dislikeVideo btn-dislike-default" data-disliked="0" data-trickid="49" data-videoid="22806" data-count="0">
                        <span class="dislikeBadge22806">0</span>
                        </button>
                     </div>
                     <div class="in" data-notid="440823" data-videoid="22806" id="showComment440823" style="height: auto;">
                        <div class="comments-well-upper">
                           <div class="comment-block">
                              <div class="input-group">
                                 <input type="hidden" id="mentions440823" value="">
                                 <input type="text" class="form-control commentarea" id="commentbox440823" data-boxid="440823" placeholder="Add new commnet">
                                 <span class="input-group-btn">
                                 <button class="btn btn-primary comment-now" type="button" data-boxid="440823" data-videoid="22806" data-profileid="11607"><i class="fa fa-send-o"></i></button>
                                 </span>
                                 <div id="mentionbox440823" class="list-mentions"></div>
                              </div>
                              <!-- /input-group -->
                           </div>
                           <div class="comment-row" style="display: none;">
                              <strong class="comment-block">
                              <a href="javascript:void(0)" class="loadMoreComment lightgray" id="loadMoreComment440823" data-notid="440823" data-videoid="22806">Load more Comments</a>
                              </strong>
                           </div>
                           <div id="listComment440823" class="comments-well"></div>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="panel data-panel">
                  <div class="panel-header">
                     <center>
                        <a href="#">
                        <img class="media-object data-profile-pic" src="<%= imagepath %>">
                        </a>    
                     </center>
                  </div>
                  <div class="panel-body">
                     <p>
                        <a href="#"><%= userprofile.local.firstName+' '+userprofile.local.lastName %></a> has finished a new trick (Backside 50/50) <small class="newsfeed-time">2h</small>
                     </p>
                  </div>
               </div>
               <!-- end:timeline -->
            </div>
            <div class="col-lg-4">
     
               <!-- start:user info -->
               <div class="panel panel-default">
                    <div class="panel-heading" style="border-bottom:none;height:40px">
                     <header class="panel-title">
                        <div class="text-center">

                        <% 
                        if(user){
                        if(user.local.username != userprofile.local.username){ %>   
                        <div>
                        <li class="active friendsul"  id="addfriend"  data-ng-if="friendstatus.friendRequestApprovalStatus != 'accept' && friendstatus.friendRequestApprovalStatus != 'pending'"><a href="javascript:void(0);" ng-click="sendRequest('<%= userprofile.local.email %>')" class="btn btn-primary">Add Friend</a></li>
                        <li class="active friendsul"  id="requestsent"  data-ng-if="friendstatus.friendRequestApprovalStatus == 'pending' && friendstatus.friendRequestSentBy == '<%= user.local.email %>'"><a href="javascript:void(0)" class="btn btn-primary" >Request Sent</a></li>         
                       
                        <li class="friendsmenuli friendsul" data-ng-if="friendstatus.friendRequestApprovalStatus == 'pending' && friendstatus.friendRequestSentTo == '<%= user.local.email %>'"><a class="alisting btn btn-primary">Pending Approval<b class="caret"></b></a>
                             <ul class="friendssubmenu">
                                <li  class="active friendsul approval"  data-ng-if="friendstatus.friendRequestApprovalStatus == 'pending' && friendstatus.friendRequestSentTo == '<%= user.local.email %>'"><a ng-click="requestactionfromProfile('accept','<%= userprofile.local.email %>')">Accept</a></li>         
                                <li  class="active friendsul approval"  data-ng-if="friendstatus.friendRequestApprovalStatus == 'pending' && friendstatus.friendRequestSentTo == '<%= user.local.email %>'"><a ng-click="requestactionfromProfile('reject','<%= userprofile.local.email %>')"  >Reject</a></li>         
                             </ul>
                        </li>
                        <li class="active friendsul"  id="friends" ng-mouseenter="changeFriendButtonText('enter')" ng-mouseleave="changeFriendButtonText('leave')" data-ng-if="friendstatus.friendRequestApprovalStatus == 'accept'"><a href="javascript:void(0)" ng-click="unFriendprofile('<%= userprofile.local.email %>','<%= user.local.email %>')"  class="btn btn-success" id="friendtext">Friends</a></li>
                        </div>
                        <div ng-init="followStatus('<%= userprofile.local.email %>')">
                            <li class="active friendsul" data-ng-if="followstatus == 0"  id="follow"><a href="javascript:void(0);" ng-click="followUser('<%= userprofile.local.email %>')" class="btn btn-primary">Follow</a></li>
                            <li class="active friendsul" data-ng-if="followstatus == 1" ng-mouseenter="changeFollowButtonText('enter')" ng-mouseleave="changeFollowButtonText('leave')"  id="follow"><a href="javascript:void(0);"  ng-click="unFollow('<%= userprofile.local.email %>','<%= user.local.email %>')" class="btn btn-primary" id="followtext">Following<!--&nbsp;&nbsp;<i id="followingtick" class="fa fa-check" aria-hidden="true"></i>--></a></li>

                        </div>
                        <div data-ng-if="friendstatus.friendRequestApprovalStatus == 'accept' && eventsinviteList.length > 0"><li  data-ng-click="listEventsInvite('<%= userprofile.local.email %>')" class="active friendsul"><a href="javascript:void(0);" class="btn btn-primary" data-ng-click="" data-toggle="modal" data-target="#eventsinvitemodal">Invite</a></li></div>
                         <% }} %>
                        </div>
                     </header>
                    </div>
                  <div class="panel-heading">
                     <header class="panel-title">
                        <div class="text-center">
                           <strong></strong>
                        </div>
                     </header>
                  </div>
                  <div class="panel-body">
                     <div class="text-center" id="author">
                        <img src="<%= imagepath %>">
                        <h3><%= userprofile.local.firstName+' '+userprofile.local.lastName %></h3>
                        <small class="label label-warning"><%= userprofile.local.locationCity %>,&nbsp;<%= userprofile.local.locationState %>,&nbsp;<%= userprofile.local.locationCountry %></small>
                        <p><%= userprofile.userBio  %></p>
                        <p data-ng-init="countFriendsFollowers('<%= userprofile.local.email %>','friends')"><span>{{totalFriends}}</span></p>
                        <p data-ng-init="countFriendsFollowers('<%= userprofile.local.email %>','followers')">Followed by <span>{{totalFollowers}}</span> people</p>
                        <p class="sosmed-author">
                           <% if(userprofile.facebookURL) { %><a href="#"><i class="fa fa-facebook" data-toggle="tooltip" data-placement="top" title="" data-original-title="Facebook"></i></a><% } %>
                           <% if(userprofile.twitterURL) { %><a href="#"><i class="fa fa-twitter" data-toggle="tooltip" data-placement="top" title="" data-original-title="Twitter"></i></a><% } %>
                           <!--<a href="#"><i class="fa fa-google-plus" data-toggle="tooltip" data-placement="top" title="" data-original-title="Google Plus"></i></a>-->
                           <!--<a href="#"><i class="fa fa-snapchat" data-toggle="tooltip" data-placement="top" title="" data-original-title="Linkedin"></i></a>-->
                        </p>
                     </div>
                  </div>
               </div>
               <!-- end:user info -->              
               <!-- start:user info table -->

<% layout('layout') -%>
 <% 
 var productscount = 0;
 if( sessionCartItemsCount !=  undefined && sessionCartItemsCount > 0 ){ 
    productscount =  sessionCartItemsCount
 } %>
<div class="cart_page" id="cart_checkoutpage" data-ng-controller="cartController">
    <div class="overlay_bg"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <table class="table table-hover" id="producttable">
                    <thead>
                        <tr>
                            
                            <th> Product(<%= productscount %>) </th>
                            <th>Quantity</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Total</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var subtotal= 0 ;%>
                        <% if( sessionCartItemsCount !=  undefined && sessionCartItemsCount > 0 ){ %>
                        <% for(var i = 0; i < productIds.length; i++){ %>
                        <% var productid = productIds[i]; %>
                       
                        <tr id="productrow_<%= i %>">
                            <td class="col-sm-8 col-md-6">
                                <div class="media">
                                    <a class="thumbnail pull-left" href="#"> <img class="media-object" src="/public/uploads/<%= sessionCart[productid].product_image[0] %>" style="width: 72px; height: auto;"> </a>
                                    <div class="media-body">
                                        <h4 class="media-heading"><a href="#"><%= sessionCart[productid].title %></a></h4>
<!--                                        <h5 class="media-heading"> by <a href="#"><%= sessionCart[productid].product_brand %></a></h5>
                                        <span>Status: </span><span class="text-success"><strong>In Stock</strong></span>-->
                                    </div>
                                </div>
                            </td>
                            <td class="col-sm-1 col-md-1" style="text-align: center">
                                <input type="number" class="form-control quantitybox" id="exampleInputquantity_<%= i %>" value="<%= sessionCart[productid].quantity %>" >
                            </td>
                            <td class="col-sm-1 col-md-1 text-center">$<strong id="itemprice_<%= i %>"><%= sessionCart[productid].item_price %></strong></td>
                            <td class="col-sm-1 col-md-1 text-center"><strong id="totalitemprice_<%= i %>">$<%= sessionCart[productid].total_item_price %></strong></td>
                            <td class="col-sm-1 col-md-1">
                                    <button type="button" class="btn btn-danger removeproduct" id="<%= i %>" onclick="deleteRow(this.parentNode.parentNode.rowIndex,'<%= productid %>')">
                                    <span class="glyphicon glyphicon-remove"></span> Remove
                                </button>
                            </td>
                        </tr>
                        <% subtotal += sessionCart[productid].total_item_price %>
                        <% } %> 
                        <% } %>
                    </tbody>
                </table>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td>   </td>
                            <td class="text-center"><h5>Subtotal</h5></td>
                            <td class="text-right"><h5>$<strong id="sub_total"><%= subtotal %></strong></h5></td>
                        </tr>
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td>   </td>
                            <td class="text-center"><h5>Estimated shipping</h5></td>
                            <td class="text-right"><h5><strong>$6.94</strong></h5></td>
                        </tr>
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td>   </td>
                            <td class="text-center"><h3>Total</h3></td>
                            <td class="text-right"><h3><strong>$<%= (subtotal+6.94) %></strong></h3></td>
                        </tr>
                        <tr>
                            <td><a href="/gear"><button type="button" class="btn btn-warning continue_shoping">
                                <span class="glyphicon glyphicon-shopping-cart"></span> Continue Shopping
                                    </button></a></td>
                            <td>   </td>
                            <td>   </td>
                            <td>
                            </td>
                            <td>
                            <a href="/checkout"><button type="button" class="btn btn-success checkout_btn">
                                Checkout <span class="glyphicon glyphicon-play"></span>
                                </button></a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
   
 	

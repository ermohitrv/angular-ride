<% layout('layout') -%>
<div id="homeController" data-ng-controller="homeController">
<section id="top_rider">
    <div class="container">
        <div class="title">
            <h1>Suggestion</h1>
        </div>
    </div>
    <div class="col-sm-6 col-sm-offset-3">
            <% if (message.length > 0) { %>
                <% if (message_type == "success"){ %>
                    <div class="alert alert-success"><a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a><%= message %></div>
                <% }else{ %>
                    <div class="alert alert-danger"><a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a><%= message %></div>
                 <% } %>
            <% } %>
            <form action="/submit-suggestionform" method="post" id="suggestion_form">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" placeholder="Your name" class="form-control" name="suggestionName">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" placeholder="Your email address" class="form-control" name="suggestionEmail">
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input type="tel" placeholder="Your phone number" class="form-control" name="suggestionPhone">
                </div>
                <div class="form-group">
                    <label>Suggestion</label>
                    <textarea  placeholder="Your suggestion....." class="form-control" id="suggestionDescription" name="suggestionDescription"></textarea>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-warning btn-lg">Send</button>
                </div>
            </form>
    </div>
</section>
